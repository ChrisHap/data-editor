<?xml version="1.0" encoding="UTF-8"?>

<?import de.hhu.stups.plues.dataeditor.ui.components.LabeledTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="GridPane" styleClass="windowPadding" vgap="5.0" alignment="CENTER" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <LabeledTextField fx:id="txtModule" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <LabeledTextField fx:id="txtId" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <LabeledTextField fx:id="txtPordnr" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <LabeledTextField fx:id="txtCp" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Label text="%parentLevel"/>
        <ComboBox fx:id="cbParent" minWidth="0" maxWidth="Infinity"/>
    </VBox>
    <CheckBox fx:id="cbMandatory" text="%mandatory" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <CheckBox fx:id="cbBundled" text="%bundled" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <Button fx:id="persistChanges" text="%persist" onAction="#persistChanges" GridPane.columnIndex="0"
            GridPane.rowIndex="7"/>
</fx:root>