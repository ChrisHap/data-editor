<?xml version="1.0" encoding="UTF-8"?>

<?import de.hhu.stups.plues.dataeditor.ui.components.LabeledTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="GridPane" alignment="CENTER" vgap="5.0" styleClass="windowPadding" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <LabeledTextField fx:id="txtAbstractUnit" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <LabeledTextField fx:id="txtId" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Label text="%parentModule"/>
        <ComboBox fx:id="cbParent" minWidth="0" maxWidth="Infinity"/>
    </VBox>
    <LabeledTextField fx:id="txtType" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <LabeledTextField fx:id="txtSemester" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button fx:id="persistChanges" text="%persist" onAction="#persistChanges" GridPane.columnIndex="0"
            GridPane.rowIndex="5"/>
</fx:root>
