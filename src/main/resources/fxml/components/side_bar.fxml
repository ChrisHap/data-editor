<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import de.hhu.stups.plues.dataeditor.ui.components.TreeType?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <ComboBox fx:id="cbDataType" minWidth="0" maxWidth="Infinity">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <TreeType fx:value="MODULE_TREE"/>
                <TreeType fx:value="DATA_TREE" />
            </FXCollections>
        </items>
    </ComboBox>
    <CustomTextField fx:id="txtQuery" promptText="%search"/>
    <TreeTableView fx:id="treeTableView"/>
</fx:root>