<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<fx:root type="MenuBar" useSystemMenuBar="true" xmlns="http://javafx.com/javafx/8.0.76-ea"
         xmlns:fx="http://javafx.com/fxml/1">
    <Menu mnemonicParsing="false" text="%file">
        <MenuItem fx:id="menuItemOpenDb" onAction="#openDb" mnemonicParsing="false" text="%openDb"
                  accelerator="Shortcut+O">
            <graphic>
                <FontAwesomeIconView glyphName="FOLDER_OPEN" size="14"/>
            </graphic>
        </MenuItem>
        <MenuItem fx:id="menuItemSaveDbAs" onAction="#saveDbAs" disable="true" mnemonicParsing="false" text="%saveDbAs"
                  accelerator="Shortcut+Shift+S"/>
        <MenuItem fx:id="menuItemExportDb" onAction="#exportDb" disable="true" mnemonicParsing="false"
                  text="%exportDb" accelerator="Shortcut+E">
            <graphic>
                <FontAwesomeIconView glyphName="SHARE_SQUARE_ALT" size="14"/>
            </graphic>
        </MenuItem>
        <MenuItem onAction="#closeWindow" mnemonicParsing="false" text="%closeWindow">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="14"/>
            </graphic>
        </MenuItem>
    </Menu>
</fx:root>